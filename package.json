{
  "name": "comet",
  "version": "0.1.0",
  "private": true,
  "description": "Niconicoment-style real-time comment system",
  "workspaces": [
    "packages/*",
    "packages/api/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @comet/shared build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0",
    "prettier-plugin-css-order": "^2.1.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
